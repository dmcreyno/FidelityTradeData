<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="TradeData" packages="">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p %c{1}:%L - %m%n"/>
            <NoMarkerFilter onMatch="ACCEPT" onMismatch="DENY" />
        </Console>
        <File name="file" fileName="${sys:com.ga.fidelity.trades.home}/log.txt" append="false">
            <PatternLayout pattern="%-5p %c{1}:%L - %m%n"/>
            <NoMarkerFilter onMatch="ACCEPT" onMismatch="DENY" />
        </File>
        <File name="summary" fileName="${sys:com.ga.fidelity.trades.home}/summary.txt" append="false">
            <PatternLayout pattern="%m%n"/>
            <MarkerFilter marker="PRINT" onMatch="ACCEPT" onMismatch="DENY" />
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="STDOUT"/>
        </Root>
        <Logger name="fidelity.trades" level="info">
            <AppenderRef ref="file"/>
            <AppenderRef ref="summary"/>
        </Logger>
    </Loggers>
</Configuration>